<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.games.peter.lab4_voice_calendar.MainActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/iv_create_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:srcCompat="@drawable/ic_microphone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:text="@string/sub_title"
        android:textColor="@color/Grey_blue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
    <Button
        android:id="@+id/btn_display_events"
        android:layout_width="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/button_show_events_design"
        android:text="Show Scheduled Events" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/button"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Options"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_options"/>

        <Button
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Help"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_help2"/>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Exit"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_exit"/>

    </LinearLayout>
</LinearLayout>
